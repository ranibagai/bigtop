<?xml version="1.0"?>
<configuration>

	<property>
      		<name>adl.debug.override.localuserasfileowner</name>
		<value>true</value>
	</property>

	<property>
		<name>fs.AbstractFileSystem.adl.impl</name>
		<value>org.apache.hadoop.fs.adl.Adl</value>
	</property>
	<property>
		<name>fs.adl.impl</name>
		<value>org.apache.hadoop.fs.adl.AdlFileSystem</value>
	</property>
	<property>
		<name>dfs.adls.sometoken.hostname</name>
		<value>${adl.suite.dfs.adls.sometoken.hostname}</value>
	</property>
	<property>
		<name>fs.defaultFS</name>
		<value>${adl.suite.fs.defaultFS}</value>
		<final>true</final>
	</property>
	<property>
		<name>dfs.adls.sometoken.mountpoint</name>
		<value>${adl.suite.dfs.adls.sometoken.mountpoint}</value>
	</property>
	<property>
		<name>dfs.adls.oauth2.refresh.url</name>
		<value>${adl.suite.dfs.adls.oauth2.refresh.url}</value>
	</property>
	<property>
		<name>dfs.adls.oauth2.credential</name>
		<value>${adl.suite.dfs.adls.oauth2.credential}</value>
	</property>
	<property>
		<name>dfs.adls.oauth2.client.id</name>
		<value>${adl.suite.dfs.adls.oauth2.client.id}</value>
	</property>
	<property>
		<name>dfs.adls.oauth2.access.token.provider.type</name>
		<value>${adl.suite.dfs.adls.oauth2.access.token.provider.type}</value>
	</property>
	<property>
		<name>hadoop.security.authentication</name>
		<value>simple</value>
	</property>
	<property>
		<name>hadoop.proxyuser.hive.hosts</name>
		<value>*</value>
	</property>
	<property>
		<name>hadoop.proxyuser.hive.groups</name>
		<value>hudson,testuser,root,hadoop,jenkins,oozie,hive,httpfs,hue,users</value>
	</property>
	<property>
		<name>hadoop.proxyuser.httpfs.hosts</name>
		<value>*</value>
	</property>
	<property>
		<name>hadoop.proxyuser.httpfs.groups</name>
		<value>hudson,testuser,root,hadoop,jenkins,oozie,hive,httpfs,hue,users</value>
	</property>
	<property>
		<name>hadoop.proxyuser.hue.hosts</name>
		<value>*</value>
	</property>
	<property>
		<name>hadoop.proxyuser.hue.groups</name>
		<value>hudson,testuser,root,hadoop,jenkins,oozie,hive,httpfs,hue,users</value>
	</property>
	<property>
		<name>hadoop.proxyuser.oozie.hosts</name>
		<value>*</value>
	</property>
	<property>
		<name>hadoop.proxyuser.oozie.groups</name>
		<value>hudson,testuser,root,hadoop,jenkins,oozie,hive,httpfs,hue,users</value>
	</property>
</configuration>
